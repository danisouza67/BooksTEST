<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="styles/styles.css">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Books Library</title>
</head>

<body
    style="background-image: url(https://scontent.fdub3-1.fna.fbcdn.net/v/t1.6435-9/107451395_106163994502475_362891493936831848_n.jpg?_nc_cat=101&ccb=1-3&_nc_sid=e3f864&_nc_ohc=s55auWn6En0AX_1NsZk&tn=ZFZY_CUzDOlU6c7Z&_nc_ht=scontent.fdub3-1.fna&oh=23a5df756944770c97c37bbe5ff415ce&oe=60B449B7);">
    <div class="container" style="background-color: rgba(163, 193, 201, 0.8)">
        <h1 class="mb-4">Books Library</h1>
        <a href="/book" class="btn btn-success" style="background: rgba(25, 108, 131, 0.9);">New Book</a>

        <% books.forEach(book => { %>
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title"><%= book.title %></h4>
                <div class="card-subtitle text-muted mb-2">
                 <p>Author: <br><%- book.author %> </p>
                </div>
                <div class="card-text mb-2">Date added: <%= book.createdAt.toLocaleDateString() %></div>
                <div class="card-text mb-2"><p>Gender: <br><%- book.gender %> </p></div>
                <div class="card-text mb-2"><p>Description: <br><%- book.desc %> </p></div>
                <div class="card-text mb-2"><p>Year: <br><%- book.year %> </p></div>
                <div class="card-text mb-2"> <p>Price: <br><%- book.price %> </p></div>
                <a href="book/<%= book.id %>" class="btn btn-primary" style="background: rgba(25, 108, 131, 0.9);">Read
                    More</a>
                <a href="edit/<%= book.id %>" class="btn btn-info">Edit</a>
                <form action="/book/<%= book.id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
        <% }) %>
        <br>
    </div>
</body>

</html>